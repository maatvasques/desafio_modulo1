<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_pedido_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Relatório de Pedido #<t t-esc="doc.name"/></h2>
                        <p>Cliente: <t t-esc="doc.cliente_id.name"/></p>
                        <p>Data do Pedido: <t t-esc="doc.data_pedido"/></p>
                        
                        <table class="table table-sm mt-4">
                            <thead>
                                <tr>
                                    <th>Produto</th>
                                    <th>Quantidade</th>
                                    <th>Preço Unitário</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.pedido_item_ids" t-as="item">
                                    <tr>
                                        <td><t t-esc="item.produto_id.name"/></td>
                                        <td><t t-esc="item.quantidade"/></td>
                                        <td><t t-esc="item.preco_unitario" t-options='{"widget": "monetary", "display_currency": doc.env.company.currency_id}'/></td>
                                        <td><t t-esc="item.subtotal" t-options='{"widget": "monetary", "display_currency": doc.env.company.currency_id}'/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        
                        <div class="row mt-4">
                            <div class="col-6"></div>
                            <div class="col-6">
                                <table class="table table-sm">
                                    <tr class="text-right">
                                        <td><strong>Total:</strong></td>
                                        <td><t t-esc="doc.total" t-options='{"widget": "monetary", "display_currency": doc.env.company.currency_id}'/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>